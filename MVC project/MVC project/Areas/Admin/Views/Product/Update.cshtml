@model UpdateProductVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Update Slide</h4>
                       
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">

                               <img style="width:150px;height:150px;" src="~/assets/images/website-images/@Model.ProductImages.FirstOrDefault(p=>p.IsPrimary==true)?.Url"/>
                            </div>
                            <div class="form-group">
                                <label asp-for="MainPhoto">Main Image</label>
                                <input asp-for="MainPhoto" class="form-control" accept="image/*">
                                <span class="text-danger" asp-validation-for="MainPhoto"></span>
                            </div>
                            <div class="form-group">
                                <img style="width:150px;height:150px;" src="~/assets/images/website-images/@Model.ProductImages.FirstOrDefault(p=>p.IsPrimary==false)?.Url" />
                            </div>
                            <div class="form-group">
                                <label asp-for="HoverPhoto">Hover Image</label>
                                <input asp-for="HoverPhoto" class="form-control" accept="image/*">
                                <span class="text-danger" asp-validation-for="HoverPhoto"></span>
                            </div>
                            <div class="form-group  d-flex ">
                               @foreach (ProductImage image in Model.ProductImages.Where(p=>p.IsPrimary==null))
                               {
                                   <div class="position-relative">
                                        <img style="width:150px;height:150px;" src="~/assets/images/website-images/@image.Url" />
                                        <input asp-for="Imageids" type="hidden" value="@image.Id">
                                        <button type="button" style="right:5px;top:5px;" class="cus-delete btn btn-danger position-absolute">X</button>
                                   </div>
                                   

                               }

                            </div>
                            <div class="form-group">
                                <label asp-for="Photos">Additional Images</label>
                                <input asp-for="Photos" class="form-control" accept="image/*">
                                <span class="text-danger" asp-validation-for="Photos"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for ="Name">Name</label>
                                <input asp-for="Name" class="form-control"  placeholder="Name" >
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input asp-for="Price" class="form-control" placeholder="Price">
                                <span class="text-danger" asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SKU">SKU</label>
                                <input asp-for="SKU" class="form-control" placeholder="SKU">
                                <span class="text-danger" asp-validation-for="SKU"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId">Category</label>
                              
                                <select asp-for="CategoryId" class="form-control" asp-items="new SelectList(Model.Categorys,nameof(Category.Id),nameof(Category.Name))">
                                   
                                </select>
                              
                                <span class="text-danger" asp-validation-for="CategoryId"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Tagids">Tag</label>

                                <select asp-for="Tagids" class="form-control" asp-items="new SelectList(Model.Tags,nameof(Tag.Id),nameof(Category.Name))">
                                </select>

                                <span class="text-danger" asp-validation-for="Tagids"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Colorids">Color</label>

                                <select asp-for="Colorids" class="form-control" asp-items="new SelectList(Model.Colors,nameof(Color.Id),nameof(Category.Name))">
                                </select>

                                <span class="text-danger" asp-validation-for="Colorids"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Sizeids">Category</label>

                                <select asp-for="Sizeids" class="form-control" asp-items="new SelectList(Model.Sizes,nameof(Size.Id),nameof(Category.Name))">
                                </select>

                                <span class="text-danger" asp-validation-for="Sizeids"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input asp-for="Description" class="form-control" placeholder="Description">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                           
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>



@section DeleteImage{
    <script>
        var btns = document.querySelectorAll(".cus-delete")
        btns.forEach(b => {
            b.addEventListener("click", function () {
                b.parentElement.remove();

            })
        })
    </script>

}
