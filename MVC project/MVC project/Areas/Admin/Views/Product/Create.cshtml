@model CreateProductVM

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">

            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Create Slide</h4>
                       
                        <form class="forms-sample" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for ="Name">Name</label>
                                <input asp-for="Name" class="form-control"  placeholder="Name" >
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price">Price</label>
                                <input asp-for="Price" class="form-control" placeholder="Price">
                                <span class="text-danger" asp-validation-for="Price"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="SKU">SKU</label>
                                <input asp-for="SKU" class="form-control" placeholder="SKU">
                                <span class="text-danger" asp-validation-for="SKU"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CategoryId">Category</label>
                             
                                <select asp-for="CategoryId" class="form-control" asp-items="new SelectList(ViewBag.Categorys,nameof(Category.Id),nameof(Category.Name))">
                                    <option disabled selected> Chosse Category </option>
                                </select>
                              
                                <span class="text-danger" asp-validation-for="CategoryId"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Tagids">Tag</label>
                              
                                <select asp-for="Tagids" class="form-control" asp-items="new SelectList(ViewBag.Tagids,nameof(Tag.Id),nameof(Tag.Name))">
                                  
                                </select>

                                <span class="text-danger" asp-validation-for="CategoryId"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Colorids">Color</label>

                                <select asp-for="Colorids" class="form-control" asp-items="new SelectList(ViewBag.Colorids,nameof(Color.Id),nameof(Color.Name))">
                                </select>

                                <span class="text-danger" asp-validation-for="Colorids"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Sizeids">Size</label>

                                <select asp-for="Sizeids" class="form-control" asp-items="new SelectList(ViewBag.Sizeids,nameof(Size.Id),nameof(Size.Name))">
                                </select>

                                <span class="text-danger" asp-validation-for="Sizeids"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description">Description</label>
                                <input asp-for="Description" class="form-control" placeholder="Description">
                                <span class="text-danger" asp-validation-for="Description"></span>
                            </div>
                           
                            <button type="submit" class="btn btn-primary me-2">Submit</button>
                            <button class="btn btn-light">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
